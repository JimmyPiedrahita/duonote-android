<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid android:color="@color/background_dark" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:type="radial"
                android:gradientRadius="500dp"
                android:startColor="#40387eff"
                android:endColor="#00387eff"
                android:centerX="0.9"
                android:centerY="0.9" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:type="radial"
                android:gradientRadius="400dp"
                android:startColor="#4D5a3804"
                android:endColor="#005a3804"
                android:centerX="0.1"
                android:centerY="0.2" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="@color/card_border" />
            <corners android:radius="16dp" />
        </shape>
    </item>

</layer-list>
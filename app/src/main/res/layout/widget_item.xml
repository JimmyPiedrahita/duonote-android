<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:gravity="center_vertical"
    android:background="@drawable/bg_widget_item">

    <TextView
        android:id="@+id/note_item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="14sp"
        android:textColor="@color/text_primary"
        android:lineSpacingMultiplier="1.3"
        android:paddingEnd="8dp"/>

    <ImageButton
        android:id="@+id/note_item_link"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:contentDescription="Open Link"
        android:background="@drawable/bg_ripple_add_note"
        android:src="@drawable/ic_link"
        android:scaleType="centerInside"
        android:padding="4dp"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/note_item_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:contentDescription="@string/description_button_copy"
        android:background="@drawable/bg_ripple_add_note"
        android:src="@drawable/ic_copy_text"
        android:scaleType="centerInside"
        android:padding="4dp"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="2dp"
    android:gravity="center_vertical"
    android:layout_margin="0dp">

    <TextView
        android:id="@+id/note_item_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:textSize="16sp"
        android:textColor="@color/widget_text_pending"
        android:padding="5dp"
        android:layout_margin="0dp"/>

    <ImageButton
        android:id="@+id/note_item_button"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:contentDescription="@string/description_button_copy"
        android:textColor="@color/white"
        android:layout_weight="1"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:background="@drawable/bg_ripple_add_note"
        android:src="@drawable/ic_copy_text"/>

</LinearLayout>
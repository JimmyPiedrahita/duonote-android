<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_root"
    android:orientation="vertical"
    android:background="@drawable/rounded_corner_main"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ListView
        android:id="@+id/widget_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="6dp"
        android:scrollbars="none"
        android:divider="@color/transparent"
        android:listSelector="@color/transparent"/>

    <LinearLayout
        android:id="@+id/header_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|end"
        android:background="@drawable/bg_widget_item"
        android:padding="10dp"
        android:layout_marginTop="6dp">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_add_notes"
            android:background="@drawable/bg_ripple_add_note"
            android:contentDescription="@string/description_button_add"
            android:scaleType="centerInside"
            android:padding="4dp"
        />
    </LinearLayout>
</LinearLayout>